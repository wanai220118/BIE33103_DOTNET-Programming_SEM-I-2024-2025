@model List<LabDemo.Models.Chore>

<!-- Custom Styles -->
<style>
    body {
        background-color: #CBEBF6; /* Soft blue */
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        color: #333;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-add {
        background-color: #F3DBEB;
        color: #333;
        border: none;
    }

    .btn-add:hover {
        background-color: #E9B9D3;
        color: #000;
    }

    .table thead {
        background-color: #C4DAF2; /* Light sky blue */
        color: #333;
        text-align: center;
    }

    .table tbody tr {
        background-color: #FDF5CE; /* Cream yellow */
    }

    .table tbody tr:hover {
        background-color: #E9B9D3; /* Soft hover */
    }

    .btn-primary, .btn-danger {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #C4DAF2;
        border-color: #C4DAF2;
        color: #000;
    }

    .btn-primary:hover {
        background-color: #A9C2E3;
        color: #000;
    }

    .btn-danger {
        background-color: #F3DBEB;
        border-color: #F3DBEB;
        color: #000;
    }

    .btn-danger:hover {
        background-color: #E9B9D3;
        color: #000;
    }

</style>

<h1 class="mb-4">List of Chores</h1>

<!-- Add Chore Button -->
<div class="text-center mb-3">
    <a asp-controller="Chore" asp-action="Add" class="btn btn-add px-4 py-2 rounded">
        ➕ Add Chore
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chore in Model)
        {
            <tr>
                <td>@chore.Id</td>
                <td>@chore.Title</td>
                <td>@chore.Description</td>
                <td>@chore.DueDate.ToShortDateString()</td>
                <td>@chore.Status</td>
                <td class="text-center d-flex justify-content-center gap-2">
                    <a asp-controller="Chore" asp-action="Edit" asp-route-id="@chore.Id" class="btn btn-sm btn-primary">
                        Edit
                    </a>
                    <form asp-controller="Chore" asp-action="Delete" asp-route-id="@chore.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this chore?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
